<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/relativealbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="7dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:id="@+id/textviewtitlealbum"
            android:text="ALBUM HOT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="7dp"
            android:id="@+id/textviewxemthemalbum"
            android:textColor="#A6A5A6"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:text="Xem ThÃªm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/relativealbum"
        android:id="@+id/recyclerviewalbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>